# BaseAclEx Environment Configuration
# Copy this file to .env and configure your local environment

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Phoenix Host and Port
PHX_HOST=localhost
PHX_PORT=4000

# Set to true to start server in production/release
PHX_SERVER=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Secret key base for Phoenix (generate with: mix phx.gen.secret)
SECRET_KEY_BASE=your_secret_key_base_here_generate_with_mix_phx_gen_secret

# Guardian JWT Secret Key (generate with: mix guardian.gen.secret)
GUARDIAN_SECRET_KEY=your_guardian_secret_key_here_generate_with_mix_guardian_gen_secret

# LiveView signing salt (generate with: mix phx.gen.secret 32)
LIVEVIEW_SIGNING_SALT=your_liveview_signing_salt_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database URL
# Format: ecto://username:password@hostname:port/database_name
DATABASE_URL=ecto://postgres:postgres@localhost:5432/base_acl_ex_dev

# Database Pool Size
POOL_SIZE=10

# Enable IPv6 for Ecto (set to true for IPv6 support)
ECTO_IPV6=false

# =============================================================================
# REDIS CONFIGURATION (Optional - for caching)
# =============================================================================

# Redis URL for caching (optional)
REDIS_URL=redis://localhost:6379/0

# Redis Pool Size
REDIS_POOL_SIZE=5

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Configuration for production
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_or_smtp_password
SMTP_TLS=true
SMTP_SSL=false

# From email address
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=BaseAclEx

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Log level (debug, info, warning, error)
LOG_LEVEL=info

# Enable structured logging (true/false)
STRUCTURED_LOGGING=false

# =============================================================================
# DEVELOPMENT/TEST CONFIGURATION
# =============================================================================

# Test Database URL (only needed for testing)
TEST_DATABASE_URL=ecto://postgres:postgres@localhost:5432/base_acl_ex_test

# Development specific settings
DEV_ROUTES=true

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# DNS Cluster Query (for production clustering)
DNS_CLUSTER_QUERY=

# SSL Configuration (production)
SSL_KEY_PATH=
SSL_CERT_PATH=
SSL_FORCE=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable two-factor authentication
ENABLE_2FA=true

# Enable audit logging
ENABLE_AUDIT_LOGGING=true

# Enable permission caching
ENABLE_PERMISSION_CACHING=true

# JWT Token Configuration
JWT_ACCESS_TOKEN_TTL_MINUTES=15
JWT_REFRESH_TOKEN_TTL_DAYS=7

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Mailgun Configuration (alternative to SMTP)
MAILGUN_API_KEY=
MAILGUN_DOMAIN=

# SendGrid Configuration (alternative to SMTP)
SENDGRID_API_KEY=

# AWS SES Configuration (alternative to SMTP)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1